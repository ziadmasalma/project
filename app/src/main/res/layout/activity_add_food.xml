<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/moha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <EditText
        android:id="@+id/food_name_edittext"
        android:layout_width="226dp"
        android:layout_height="42dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="77dp"
        android:hint="Food Name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/food_description_edittext"
        android:layout_width="226dp"
        android:layout_height="42dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="77dp"
        android:hint="Food Description"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/food_name_edittext" />

    <EditText
        android:id="@+id/food_price_edittext"
        android:layout_width="226dp"
        android:layout_height="42dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="77dp"
        android:background="@drawable/textbox"
        android:hint="Food Price"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_description_edittext"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="153dp"
        android:background="@drawable/buttin"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_price_edittext" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_food_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="153dp"
        android:background="@drawable/buttin"
        android:text="view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
